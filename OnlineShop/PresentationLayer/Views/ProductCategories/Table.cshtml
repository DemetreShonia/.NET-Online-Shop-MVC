@model IEnumerable<ProductCategoryViewModel>

<h1>Product Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Products Count</th>
            <th>Actions</th> <!-- Added this column for the buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.ProductCount</td>
                <td>
                    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@item.ProductCategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductCategoryId">Details</a> |
                    @if (item.ProductCount == 0)  
                    {
                        <a asp-action="Delete" asp-route-id="@item.ProductCategoryId">Delete</a>
                    }
                    else
                    {
                        <span>Cannot Delete</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
