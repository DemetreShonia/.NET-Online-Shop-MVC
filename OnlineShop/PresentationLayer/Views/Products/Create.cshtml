@model PresentationLayer.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Product Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Product Number -->
            <div class="form-group">
                <label asp-for="ProductNumber" class="control-label"></label>
                <input asp-for="ProductNumber" class="form-control" />
                <span asp-validation-for="ProductNumber" class="text-danger"></span>
            </div>

            <!-- List Price -->
            <div class="form-group">
                <label asp-for="ListPrice" class="control-label"></label>
                <input asp-for="ListPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>

            <!-- Size -->
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <!-- Product Category -->
            <div class="form-group">
                <label asp-for="ProductCategoryId" class="control-label"></label>
                <select asp-for="ProductCategoryId" class="form-control" asp-items="ViewBag.ProductCategoryId"></select>
                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
            </div>

            <!-- Product Model -->
            <div class="form-group">
                <label asp-for="ProductModelId" class="control-label"></label>
                <select asp-for="ProductModelId" class="form-control" asp-items="ViewBag.ProductModelId"></select>
                <span asp-validation-for="ProductModelId" class="text-danger"></span>
            </div>

            <!-- Photo Upload -->
            <div class="form-group">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Select Photo for this item</label>
                    <input class="form-control" type="file" id="formFile" asp-for="Photo" />
                </div>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Table">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
